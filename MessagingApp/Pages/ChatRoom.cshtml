@page
@model ChatRoomModel
@{
    ViewData["Title"] = "Random Chat";
}

<div class="vh-100 d-flex flex-column">
    <div class="row flex-column py-2 px-2 bg-dark text-white" style="height:60px">
        <div class="col-4 col-md-4 h-100 d-flex align-items-center">
            <a class="btn btn-danger" asp-area="" asp-page="/Index">
                <i class="fa fa-angle-left" style="font-size:18px"></i> Leave Chat Room
            </a>
        </div>
        <div class="col-4 col-md-4 h-100 d-flex justify-content-center align-items-center">
            <div class="h3" style="margin-bottom:0">OpenChat</div>
        </div>
        <div class="col-4 col-md-4 w-100"></div>
    </div>


    <div class="row flex-column flex-grow-1 overflow-auto">
        <div class="col-4 h-100 d-flex flex-column border-end border-3 pe-0" style="padding-right:0">
            <div class="row flex-column pt-3 pb-2 px-4">
                <h3 style="margin:0">Active Users:</h3>
            </div>
            <div class="col flex-column flex-grow-1 overflow-auto" id="scrollView">
            </div>
        </div>
        <div class="col-8 h-100 d-flex flex-column ps-0">
            <div class="row-11 d-flex flex-column-reverse flex-grow-1 overflow-auto" id="messageArea">
                @*<div class="row mx-4 my-1 justify-content-end">
                        <div class="py-1 px-1" style="font-size:12px; color:gray">Username</div>
                        <div class="py-2" style="border-style: solid; border-radius: 20px; width: max-content;">Hello</div>
                    </div>
                    <div class="row mx-4 my-1 justify-content-start">
                        <div class="py-1 px-1" style="font-size:12px; color:gray">Username</div>
                        <div class="py-2 bg-dark text-white" style="border-style: solid; border-radius: 20px; width: max-content;">Hi</div>
                    </div>*@

            </div>
            <div class="d-flex align-items-center my-2 ms-4">

                <div class="flex-grow-1">
                    <textarea class="form-control"
                              id="textArea"
                              rows="1"
                              placeholder="Add a message"
                              oninput="update(this.value)"
                              onkeydown="if (event.keyCode == 13) { event.preventDefault(); if (this.value) { sendMessage(); } }"></textarea>
                </div>
                <div class="ms-2 me-4">
                    <a class="btn btn-primary disabled" style="border-radius:20px" id="sendButton" onclick="sendMessage()">
                        <i class="fa fa-paper-plane" style="font-size:18px"></i> Send
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Disconnected from Chat Room</h1>
                @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
            </div>
            <div class="modal-body">
                You were disconnected from the chat room due to your connection timing out.
            </div>
            <div class="modal-footer">
                <a class="btn btn-danger" asp-area="" asp-page="/Index">Leave Chat Room</a>
                <button type="button" class="btn btn-primary" onclick="document.location.reload(true)">Reconnect to Chat Room</button>
            </div>
        </div>
    </div>
</div>



<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
